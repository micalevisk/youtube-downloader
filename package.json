{
  "name": "youtube-video-downloader",
  "version": "2.2.0",
  "description": "A slim and straightfor web app to download YouTube videos.",
  "main": "app.js",
  "bin": "bin/www",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pkg .",
    "c:build": "docker-compose --compatibility build",
    "up": "docker-compose --compatibility up -d",
    "down": "docker-compose --compatibility down -v",
    "logs": "docker-compose --compatibility logs -f",
    "stop": "docker-compose --compatibility stop",
    "c:npm": "docker-compose --compatibility exec app npm",
    "dev": "nodemon . | pino-pretty",
    "start:dev": "node . | pino-pretty",
    "start": "node ."
  },
  "author": "Micael Levi L. C. <https://micalevisk.github.io>",
  "license": "ISC",
  "pkg": {
    "assets": "public/**/*",
    "targets": ["node14-linux-x64", "node14-win-x64", "node14-macos-x64"],
    "outputPath": "dist"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.3.0"
  },
  "dependencies": {
    "content-disposition": "^0.5.3",
    "fastify": "^3.10.1",
    "fastify-error-page": "^4.0.0",
    "fastify-static": "^3.4.0",
    "make-promises-safe": "^5.1.0",
    "ytdl-core": "^4.4.5"
  }
}
