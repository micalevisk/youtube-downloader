{
  "name": "youtube-video-downloader",
  "version": "2.3.0",
  "description": "A slim and straightfor web app to download YouTube videos.",
  "main": "app.js",
  "bin": "bin/www",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pkg .",
    "c:build": "docker-compose build",
    "up": "docker-compose up -d",
    "down": "docker-compose down -v",
    "logs": "docker-compose logs -f app",
    "stop": "docker-compose stop",
    "c:npm": "docker-compose exec app npm",
    "dev": "nodemon . | pino-pretty",
    "start:dev": "node . | pino-pretty",
    "start": "node ."
  },
  "author": "Micael Levi L. C. <https://micalevisk.github.io>",
  "license": "ISC",
  "pkg": {
    "assets": "public/**/*",
    "targets": [
      "node14-linux-x64",
      "node14-win-x64",
      "node14-macos-x64"
    ],
    "outputPath": "dist"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.6.0"
  },
  "dependencies": {
    "content-disposition": "^0.5.4",
    "fastify": "^3.27.4",
    "fastify-error-page": "^4.0.0",
    "fastify-static": "^4.6.1",
    "make-promises-safe": "^5.1.0",
    "ytdl-core": "^4.11.0"
  }
}
